{
    "description": "Immutable JSON output schema for AI-driven stock market decision system (Simulation Only)",
    "type": "object",
    "properties": {
        "ticker": {
            "type": "string",
            "description": "The stock ticker symbol (e.g., RELIANCE.NS)"
        },
        "timestamp": {
            "type": "string",
            "description": "ISO 8601 timestamp of the simulation verdict"
        },
        "action": {
            "type": "string",
            "enum": [
                "BUY",
                "SELL",
                "HOLD"
            ],
            "description": "The simulated decision action"
        },
        "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Confidence score of the decision (System/Regime Confidence)"
        },
        "is_simulation": {
            "type": "boolean",
            "const": true,
            "description": "Explicit flag indicating this is a simulation artifact"
        },
        "execution_allowed": {
            "type": "boolean",
            "description": "Whether execution is allowed by risk constraints"
        },
        "consensus_score": {
            "type": "number",
            "minimum": -1.0,
            "maximum": 1.0,
            "description": "Aggregated weighted score of all agents"
        },
        "disagreement_index": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Measure of agent divergence"
        },
        "risk_level": {
            "type": "string",
            "enum": [
                "LOW",
                "MEDIUM",
                "HIGH"
            ],
            "description": "Assessed system risk level"
        },
        "regime": {
            "type": "string",
            "description": "Detected market regime"
        },
        "regime_confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Confidence in the regime detection"
        },
        "reason": {
            "type": "string",
            "description": "Human-readable explanation of the verdict"
        }
    },
    "required": [
        "ticker",
        "timestamp",
        "action",
        "confidence",
        "is_simulation",
        "execution_allowed",
        "consensus_score",
        "disagreement_index",
        "risk_level",
        "regime",
        "regime_confidence",
        "reason"
    ],
    "additionalProperties": false
}